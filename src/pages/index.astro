---
import Layout from "~/layouts/PageLayout.astro";

import Hero from "~/components/widgets/Hero.astro";
import Features2 from "~/components/widgets/Features2.astro";
import Pill from "~/components/ui/Pill.astro";
import Icon from "~/components/ui/Icon.astro";

import dliImage from "../assets/activities/dli2025.JPG";
import brownImage from "../assets/activities/brown1.jpg";
import railImage from "../assets/activities/raillab.png";

const metadata = {
  title: "Alexandra May Barry",
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero>
    <Fragment slot="tagline"> Hello, I am </Fragment>
    <Fragment slot="title">Alexandra Barry </Fragment>
    <Fragment slot="typeEffect">{["Robotics, CTO, RL, AI"]}</Fragment>
    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        View my recent projects and research. Feel free to contact me.
      </span>
      <div class="roles">
        <Pill><Icon icon="code" size="1.33em" /> AI Engineer</Pill>
        <Pill><Icon icon="robot" size="1.33em" /> Robotics</Pill>
        <Pill><Icon icon="presentation-chart" size="1.33em" /> Researcher</Pill>
      </div>
    </Fragment>

    <Fragment slot="actions">
      <div class="flex justify-center mt-8">
        <a class="btn-primary ml-4" href="/contact"> Contact Me </a>
      </div>
    </Fragment>
  </Hero>

  <!-- Recent Projects Widget *************** -->

  <Features2
    title="Recent Projects"
    subtitle="Highlights of my work in robotics, AI, research, and outreach."
    columns={3}
    items={[
      {
        title: "Research Exchange: Brown University",
        description:
          "Guest researcher at the ACT Lab under Prof. Nora Ayanian.",
        image: brownImage,
        callToAction: {
          text: "View Details",
          href: "/brown-exchange",
        },
      },
      {
        title: "Deep Learning Indaba 2025",
        description: "Robot Learning for Africa Workshop Organizing Committee.",
        image: dliImage,
        callToAction: {
          text: "View Details",
          href: "/indaba-robotics-2025",
        },
      },
      {
        title: "RAIL Lab Manager",
        description:
          "Managing operations and software stacks for robots including Pepper, Husky, and Unitree A1.",
        image: railImage,
        callToAction: {
          text: "View Details",
          href: "/rail-lab-manager",
        },
      },
      {
        title: "Explore All Projects",
        description:
          "Dive into my full portfolio of research, code, and community work.",
        icon: "tabler:arrow-right",
        classes: {
          panel:
            "bg-transparent flex justify-center items-center text-center pt-8",
          title: "text-xl font-bold text-gray-800 dark:text-gray-200 mb-2",
          description: "text-muted dark:text-gray-400",
          icon: "w-10 h-10 mb-4 text-gray-500 dark:text-gray-400",
        },
        callToAction: {
          text: "View Portfolio",
          href: "/projects",
          variant: "link",
          class: "w-full mt-4 text-primary hover:text-accent",
        },
      },
    ]}
  />

  <!-- Life Philosophy Widget **************** -->
  <section class="relative overflow-hidden py-32 lg:py-48">
    <!-- Background glow -->
    <div
      aria-hidden="true"
      class="pointer-events-none absolute inset-0 -z-10 bg-[radial-gradient(ellipse_at_center,_rgba(var(--aw-color-primary),0.15),transparent_60%)]"
    >
    </div>

    <div class="relative max-w-4xl mx-auto px-4 sm:px-6 text-center">
      <div class="space-y-6">
        <Icon name="tabler:quote" class="w-12 h-12 mx-auto text-primary/60" />

        <blockquote
          class="text-xl md:text-2xl font-serif text-muted italic leading-relaxed"
        >
          "I will be a hummingbird, I'll do the best I can."
        </blockquote>

        <div class="pt-4">
          <p class="font-bold text-lg text-heading">- Wangari Maathai</p>
          <p class="text-sm text-muted">Nobel Peace Prize Laureate</p>
        </div>

        <div class="pt-8">
          <a
            href="https://www.youtube.com/watch?v=IGMW6YWjMxw"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 text-sm font-medium text-primary hover:text-accent transition-colors duration-200"
          >
            <Icon name="tabler:video" class="w-4 h-4" />
            Watch 'I will be a hummingbird'
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .roles {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    justify-content: center;
    margin-top: 0.5rem;
  }
</style>
